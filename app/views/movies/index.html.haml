-#  This file is app/views/movies/index.html.haml
%h2 All Movies
= form_tag movies_path, :method => :get, :id=>"ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, (:checked if @ratings_selected[rating]), :id=>"ratings_#{rating}"
  = submit_tag 'Refresh', :id=>"ratings_submit"
  
%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class=> ('hilite' if @sorting_variable == "title")}= link_to "Movie Title", movies_path(:sorting_field=>'title', :ratings=>@ratings_selected), :id => "title_header"
      %th= "Rating"
      %th{:class=> ('hilite' if @sorting_variable == "release_date")}= link_to "Release Date", movies_path(:sorting_field=>'release_date', :ratings=>@ratings_selected), :id => "release_date_header"
      %th= "More Info"
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
